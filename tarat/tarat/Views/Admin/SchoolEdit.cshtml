@model DAL.Entities.School

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserEdit</title>
</head>
<body>
    <a href="/Admin/Schools">Back to List</a><br/>
    <h1>School Edit</h1>
    <form action="/Admin/SchoolSave" method="post">
        <input name="Id" type="hidden" value="@Model.Id" />
        <input name="Name" type="text" value="@Model.Name" placeholder="Name" />
        <button>Save</button>
    </form>
    <h1>Grade:</h1>
    @foreach (var item in Model.Grades)
    {
        <form action="/Admin/GradeSave" method="post">
            <input name="schoolId" type="hidden" value="@Model.Id" />
            <input name="Id" type="hidden" value="@item.Id" />
            <input name="Name" type="text" value="@item.Name" placeholder="Name" />
            <button>Save</button>
        </form>
    }
    <h1>Add Grade</h1>
    <form action="/Admin/GradeAdd" method="post">
        <input name="schoolId" type="hidden" value="@Model.Id" />
        <input name="Name" type="text" placeholder="Grade Name" />
        <button>Add</button>
    </form>

</body>
</html>
